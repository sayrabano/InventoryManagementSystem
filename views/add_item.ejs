<!DOCTYPE html>
<head>
    
    <title><%=title%></title>
    <!-- CSS only -->
<link href="../css/user_profile.css" rel="stylesheet">

<link
href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
rel="stylesheet"
integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
crossorigin="anonymous"
/>
<script
src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
crossorigin="anonymous"
></script>
   
  </head>
  <body>
    <div class="container mt-2">
      <!-- Section: Design Block -->
      <section class="">
        <div class="container">
         
           

          

              <div class="card bg-glass">
                <div class="card-body">
                  <form action="/create-item" method="POST" enctype="multipart/form-data">
                    <div class="row">
                      
                      <h3 class="mb-1">Add Item</h3>
                      
                       <div class="form-outline">
                        <input  class="form-control" type="text" name="name" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Item Name</label
                      >
                       </div>
                      
                       
                       <div class="form-outline">
                        <input  class="form-control" type="text" name="price" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Price</label
                      >
                       </div>
                       <div class="form-outline">
                        <input  class="form-control" type="text" name="quantity" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Quantity</label
                      >
                       </div>
                       <div class="form-outline">
                        <input  class="form-control" type="text" name="brand" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Brand</label
                      >
                      <div class="form-outline">
                        <input  class="form-control" type="text" name="supplierinfo" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Supplier</label
                      >
                       </div>
                       <div class="form-outline">
                        <input  class="form-control" type="text" name="category" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Category</label
                      >
                       </div>
                       <div class="form-outline">
                        <input  class="form-control" type="text" name="description" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Description</label
                      >
                       </div>
                       <div class="form-outline">
                        <input  class="form-control" type="file" name="image" placeholder="" required>
                        <label class="form-label" for="form3Example3"
                        >Select Image</label
                      >
                       </div>
                     
                      <button
                      type="submit"
                      class="btn btn-primary btn-block mb-2"
                    >
                      Add Item
                    </button>
                       
                   
                    </form>

                
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    
  </body>
</html>
